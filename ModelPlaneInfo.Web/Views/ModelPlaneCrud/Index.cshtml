@model IEnumerable<ModelPlaneInfo.Web.Models.ModelPlaneSelectionModel>

@{
    ViewBag.Title = "Index";
}

<div class="container p-4">
    <h3>Work with data on aircraft models</h3>
    @if (ViewData["message"] is not null)
    {
        <div class="alert alert-success alert-dismissible fade show p-3" role="alert">
            @ViewData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row p-4">

        @foreach (var item in Model)
        {
            <div class="col-sm-6 p-3">
                <div class="card h-100 border-success mb-3">
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Type)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.BeginnYear)</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Used)</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Note)</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        <div class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-success btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center">
        <a class="btn btn-outline-dark btn-lg" href="/ModelsPlane/ModelsPlane">Back</a>
        @Html.ActionLink("Create new", "Create", null, new { @class = "btn btn-outline-dark btn-lg" })
    </div>
</div>
<script>
    $('.alert').alert()
</script>