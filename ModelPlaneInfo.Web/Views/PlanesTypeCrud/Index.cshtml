@model IEnumerable<ModelPlaneInfo.Web.Models.PlaneTypeSelectionModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}
<div class="container p-4">
    <h3>Work with info about type plane</h3>
    @if (ViewData["message"] is not null)
    {
        <div class="alert alert-success alert-dismissible fade show p-3" role="alert">
            @ViewData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row p-4">
        @foreach (var item in Model)
        {
            <div class="col-sm-6">
                <div class="card border-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <div class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-success btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center">
        <a class="btn btn-outline-dark btn-lg" href="/PlanesType/PlanesType">Back</a>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-dark btn-lg" })
    </div>
</div>
<script>
    $('.alert').alert()
</script>